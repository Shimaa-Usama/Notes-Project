<%- include('shared/header.ejs') %> 


<div class="container my-5 py-5">
    <div class="col-md-5 m-auto text-center">
        <form action="/handleSignin" method="POST">
            <div class="form-group">
                <input value='<%= oldEmail.length ==0?'':oldEmail%>' placeholder="Enter email" name="email" type="email" class="form-control" />
                <% if (pass8lt.length) { %>
                    <div class="alert alert-danger my-3">
                        password incorrect
                    </div>
                <% } %>
                <% if (exists.length) { %>
                    <div class="alert alert-danger my-3">
                        email exists                    
                    </div>
                <% } %>
            </div>
            <div class="form-group">
                <input placeholder="confirm Password" name="password" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-info w-100">SignIn</button>
        </form>
    </div>
</div>

